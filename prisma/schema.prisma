generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name String
  datas UserData[]
  meals Meal[]

  @@map("users")
}

enum ObjectiveType {
  gain
  lose
  maintain
}

enum GenderType {
  m
  f
}

model UserData {
  id    Int    @id @default(autoincrement())
  userId             Int
  user               User                @relation(fields: [userId], references: [id])
  Gender GenderType
  Age Int
  height  Int
  weight  Int
  activityFactor Int
  objective ObjectiveType
  date DateTime

  @@map("usersData")
}

model Meal {
  id                 Int                 @id @default(autoincrement())
  userId             Int
  user               User                @relation(fields: [userId], references: [id])
  name               String              @unique
  carb Int
  protein Int
  fat Int
  calories Int

  @@unique([name,userId])
  @@map("meals")
}
